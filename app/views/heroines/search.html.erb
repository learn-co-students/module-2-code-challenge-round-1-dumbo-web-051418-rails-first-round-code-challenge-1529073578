<h2>All Heroines</h2>


<%= form_tag("/heroines/search", method: "get") do %>
  <%= label_tag(:power_id, "Search By Superpower:") %>
  <%= text_field_tag(:power_id) %>
  <%= submit_tag("Search") %>
<% end %>

<ul>
  <% @heroines.each do |heroine| %>
    <li>
      <%= link_to heroine.super_name, heroine_path(heroine) %>
    </li>
    <br>
  <% end %>
</ul>
