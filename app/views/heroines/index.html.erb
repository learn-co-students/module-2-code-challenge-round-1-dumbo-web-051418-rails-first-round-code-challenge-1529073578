<h2>All Heroines</h2>

  <!-- deliverable 8 -->
  <%= form_tag("/heroines/search", method: "get") do %>
    <%= label_tag(:power, "Search By Superpower:") %><br>
    <%= text_field_tag(:power) %>
    <%= submit_tag("Search") %>
  <% end %>

<ul>
  <% @heroines.each do |heroine| %>
    <li>
      <%= link_to heroine.super_name, heroine_path(heroine) %>   <!-- #deliverable 2 -->
    </li>
    <br>
  <% end %>
</ul>
